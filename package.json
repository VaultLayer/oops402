{
  "name": "mcp-server-example-remote",
  "version": "1.0.0",
  "description": "MCP Feature Reference Server with OAuth - Unified Implementation",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently -n \"server,apps\" -c \"blue,green\" \"tsx watch --inspect src/index.ts\" \"npm run watch:apps\"",
    "dev:internal": "concurrently -n \"server,apps\" -c \"blue,green\" \"AUTH_MODE=internal tsx watch --inspect src/index.ts\" \"npm run watch:apps\"",
    "dev:external": "concurrently -n \"auth-server,mcp-server,apps\" -c \"yellow,blue,green\" \"AUTH_MODE=auth_server PORT=3001 BASE_URI=http://localhost:3001 tsx watch src/index.ts\" \"sleep 3 && AUTH_MODE=external AUTH_SERVER_URL=http://localhost:3001 tsx watch --inspect src/index.ts\" \"npm run watch:apps\"",
    "build": "tsc && npm run copy-static && npm run build:apps",
    "build:apps": "INPUT=src/apps/wallet-dashboard/index.html vite build",
    "watch:apps": "INPUT=src/apps/wallet-dashboard/index.html vite build --watch",
    "copy-static": "mkdir -p dist/static dist/modules/auth/static && cp -r src/static/* dist/static/ 2>/dev/null || true && cp src/modules/auth/static/mcp.png dist/modules/auth/static/ 2>/dev/null || true",
    "start": "node dist/index.js",
    "start:internal": "AUTH_MODE=internal npm start",
    "start:external": "concurrently \"AUTH_MODE=auth_server PORT=3001 BASE_URI=http://localhost:3001 node dist/index.js\" \"sleep 3 && AUTH_MODE=external AUTH_SERVER_URL=http://localhost:3001 node dist/index.js\"",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:e2e:internal": "./scripts/test-e2e-internal.sh",
    "test:e2e:external": "./scripts/test-e2e-external.sh",
    "test:e2e": "./scripts/test-e2e-all.sh",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "postinstall": "patch-package",
    "crawl-bazaar": "tsx src/scripts/crawl-bazaar.ts"
  },
  "dependencies": {
    "@account-kit/infra": "^4.81.3",
    "@account-kit/smart-contracts": "^4.81.3",
    "@lit-protocol/auth-helpers": "^7.1.1",
    "@lit-protocol/constants": "^7.1.1",
    "@lit-protocol/contracts": "^0.0.90",
    "@lit-protocol/lit-auth-client": "^7.3.1",
    "@lit-protocol/lit-node-client": "^7.1.1",
    "@lit-protocol/pkp-ethers": "^7.3.1",
    "@modelcontextprotocol/ext-apps": "https://pkg.pr.new/modelcontextprotocol/ext-apps/@modelcontextprotocol/ext-apps@95663d4",
    "@modelcontextprotocol/sdk": "^1.24.2",
    "@redis/client": "^1.6.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@x402/evm": "^2.0.0",
    "@x402/fetch": "^2.0.0",
    "agent0-sdk": "^0.31.0",
    "bs58": "^6.0.0",
    "connect-redis": "^9.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ethers": "^5.7.2",
    "express": "^4.21.2",
    "express-openid-connect": "^2.19.3",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.2",
    "graphql": "^16.12.0",
    "ipfs-only-hash": "^4.0.0",
    "jsonwebtoken": "^9.0.3",
    "jwks-rsa": "^3.2.0",
    "raw-body": "^3.0.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "viem": "^2.38.6",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@flydotio/dockerfile": "^0.7.10",
    "@graphql-codegen/cli": "^5.0.0",
    "@types/content-type": "^1.1.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "patch-package": "^8.0.1",
    "postinstall-postinstall": "^2.1.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vite": "^5.4.21",
    "vite-plugin-singlefile": "^2.3.0"
  },
  "overrides": {
    "@types/express": "^5.0.0",
    "@types/express-serve-static-core": "^5.0.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "",
  "license": "MIT"
}
